<h1>Eat The Burger</h1>


<div class="burgerContainer">
<h2>Devoured</h2>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li> {{ burger_name}} <button class="eat" data-id={{id}} >Eat</button></li>
    {{/if}}
  {{/each}}
</ul>

</div>

<div class="burgerContainer">
<h2> Not Devoured</h2>    
<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
    <li> {{burger_name}} <button class="undo" data-id={{id}}>Undo</button> </li>
      
    {{/unless}}
  {{/each}}
</ul>

</div>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="cheese">Burger:</label>
    <input type="text" id="cheese" name="burger_name">
  </div>

  <div class="form-group">
    <label for="burger">Enter to order your burger!</label><br>
 
  </div>

  <button id="submit" >Submit</button>
</form>